    </logger>
    
    <logger name="org.mybatis.spring" level="DEBUG">
    </logger>
    
    <logger name="egovframework.sqlmappers" level="TRACE">
    </logger> -->
    
    <root level="INFO">
       <appender-ref ref="ROLLING"/>
       <appender-ref ref="STDOUT" />
    </root>
</configuration>